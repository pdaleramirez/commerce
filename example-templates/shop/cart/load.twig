{% extends 'shop/_layouts/main' %}

{% block main %}
  <!-- Template: {{ _self }}.twig -->
  <form method="post" action="" class="">
    <input type="hidden" name="action" value="commerce/cart/load-cart"/>
    {{ redirectInput('/shop/cart') }}
    {{ csrfInput() }}

    <h1 class="text-xl font-bold">Load Cart</h1>
    <p>Enter a cart number to load that cart into the current session.</p>

    <fieldset class="{{ classes.box.base }} mt-3 max-w-lg">
      <div>
        <label for="number">Cart Number</label>
        <div>
          <input class="{{ classes.input }} w-full"
                 type="text" id="number" name="number" placeholder="aaabbbcccâ€¦" value="">
        </div>
      </div>
      <div class="mt-3 text-right">
          <button class="{{ classes.btn.base ~ ' ' ~ classes.btn.blue }}" type="submit">Load cart</button>
      </div>

    </fieldset>
  </form>
{% endblock %}